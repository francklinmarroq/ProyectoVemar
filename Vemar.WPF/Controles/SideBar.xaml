<UserControl
    x:Class="SideBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vemar.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    mc:Ignorable="d">
    <Border
        Background="{StaticResource PrimaryBrush}"
        CornerRadius="0 0 0 16"
        SnapsToDevicePixels="True">

        <StackPanel>
            <StackPanel.Resources>
                <Style BasedOn="{StaticResource NavButton}" TargetType="RadioButton" />
            </StackPanel.Resources>
            <RadioButton
                Grid.Column="0"
                Command="{Binding UpdateCurrentViewModelCommand}"
                CommandParameter="{x:Static local:ViewType.Inicio}"
                IsChecked="True">
                <StackPanel Orientation="Horizontal">
                    <svg:SvgViewbox
                        Width="20"
                        Height="20"
                        Source="/Vemar.WPF;component/Assets/Icons/house.svg" />
                    <TextBlock Text="Inicio" />
                </StackPanel>
            </RadioButton>

            <RadioButton
                Grid.Column="1"
                Command="{Binding UpdateCurrentViewModelCommand}"
                CommandParameter="{x:Static local:ViewType.Remedidas}"
                Content="Remedidas" />
            <RadioButton Grid.Column="2" Content="Proyectos" />
            <RadioButton Grid.Column="3" Content="Caja Chica" />
        </StackPanel>

    </Border>

</UserControl>
