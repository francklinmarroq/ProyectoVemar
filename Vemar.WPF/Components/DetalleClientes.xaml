<UserControl
    x:Class="DetalleClientes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vemar.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="10,0,10,0"
                Content="Nombre"
                FontSize="16"
                FontWeight="SemiBold" />
            <TextBox
                x:Name="txtNombre"
                Grid.Column="1"
                Height="30"
                Margin="10,0,10,0"
                FontSize="16" />
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="10,0,10,0"
                Content="Dirección"
                FontSize="16"
                FontWeight="SemiBold" />
            <TextBox
                x:Name="txtDireccion"
                Grid.Column="1"
                Height="30"
                Margin="10,0,10,0"
                FontSize="16" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="10,0,10,0"
                Content="Representante"
                FontSize="16"
                FontWeight="SemiBold" />
            <TextBox
                x:Name="txtNombreRepresentante"
                Grid.Column="1"
                Height="30"
                Margin="10,0,10,0"
                FontSize="16" />
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="10,0,10,0"
                    Content="Rtn Representante"
                    FontSize="16"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="txtRtnRepresentante"
                    Grid.Column="1"
                    Height="30"
                    Margin="10,0,10,0"
                    FontSize="16" />
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="10,0,10,0"
                    Content="Rtn Representante"
                    FontSize="16"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="txtDniR"
                    Grid.Column="1"
                    Height="30"
                    Margin="10,0,10,0"
                    FontSize="16" />
            </Grid>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="10,0,10,0"
                Content="Teléfono"
                FontSize="16"
                FontWeight="SemiBold" />
            <TextBox
                x:Name="txtTelefono"
                Grid.Column="1"
                Height="30"
                Margin="10,0,10,0"
                FontSize="16" />
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="10,0,10,0"
                    Content="Email del Reresentante"
                    FontSize="16"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="txtEmailRepresentante"
                    Grid.Column="1"
                    Height="30"
                    Margin="10,0,10,0"
                    FontSize="16" />
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Margin="10,0,10,0"
                    Content="Email Corporativo"
                    FontSize="16"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="txtEmailCorporativo"
                    Grid.Column="1"
                    Height="30"
                    Margin="10,0,10,0"
                    FontSize="16" />
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
