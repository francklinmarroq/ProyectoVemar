<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Colors  -->
    <Color x:Key="Primary">#ffffff</Color>
    <Color x:Key="Secondary">#F8F7F7</Color>
    <Color x:Key="Accent">#1F1F1F</Color>
    <Color x:Key="Danger">#ff4949</Color>
    <Color x:Key="TextLight">#1F1F1F</Color>
    <Color x:Key="TextDark">#ffffff</Color>

    <!--  Brushes  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}" />
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLight}" />
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDark}" />
</ResourceDictionary>
